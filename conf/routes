# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /game                       controllers.GameController.index
GET     /game/move/:direction       controllers.GameController.move(direction: String)
GET     /game/turn                  controllers.GameController.turn
GET     /game/shoot                 controllers.GameController.shoot
GET     /game/undo                  controllers.GameController.undo
GET     /game/redo                  controllers.GameController.redo
GET     /game/save                  controllers.GameController.save
GET     /game/load                  controllers.GameController.load

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
